extends layout

block content
    section#main-panel
        #contact.d-flex.justify-content-center
            .blue-panel.shallow.rounded.w-50
                h1 Contact Us
                span If you have questions, feedback and/or suggestions, you can submit them using the form below and we will get back to you ASAP.
                hr
                form#contact(action='/contact-form', method='POST')
                    .mb-3
                        label Full Name:
                        input.form-control(type='text', name='name')
                    .mb-3
                        label Subject:
                        input.form-control(type='text', name='subject')
                    .mb-3
                        label Email:
                        input.form-control(type='email', name='email')
                    .mb-3
                        label Message:
                        textarea.form-control.w-100(name='message', rows='10')
                    .mb-3.text-right
                        button(type='submit').btn.btn-primary Submit